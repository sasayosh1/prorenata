          {
            "_key": "span-1760818313959-dse48fn7f",
            "_type": "span",
            "marks": [],
            "text": "柔軟な働き方と時給制"
          }
        ],
        "markDefs": [],
        "style": "h3"
      },
      {
        "_key": "block-1760818313959-kgtkteezp",
        "_type": "block",
