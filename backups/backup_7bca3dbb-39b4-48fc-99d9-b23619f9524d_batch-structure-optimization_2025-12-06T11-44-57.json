          {
            "_key": "dd3n9ac8",
            "_type": "span",
            "marks": [],
            "text": "患者さんやご家族から強い要望や感情を受けたとき"
          }
        ],
        "level": 1,
        "listItem": "bullet",
        "markDefs": [],
        "style": "normal"
      },
