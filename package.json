{
  "name": "prorenata",
  "version": "1.0.0",
  "description": "看護助手向け情報サイト - 現場経験者が教える実践的ガイド",
  "private": true,
  "author": "ProReNata編集部",
  "license": "MIT",
  "keywords": [
    "看護助手",
    "医療現場",
    "転職",
    "資格",
    "キャリア",
    "情報サイト"
  ],
  "homepage": "https://prorenata.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/sasayosh1/prorenata"
  },
  "scripts": {
    "dev": "NODE_ENV=development next dev -p 3000",
    "dev:auto": "NODE_ENV=development CI=true NEXT_TELEMETRY_DISABLED=1 PORT=3000 next dev -p 3000",
    "dev:background": "sh -c 'kill -9 $(lsof -ti TCP:3000) 2>/dev/null || true; nohup npm run dev:auto > .dev.log 2>&1 & echo $! > .dev.pid'",
    "dev:sanity": "npx sanity dev --port 3333",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "build:analyze": "ANALYZE=true npm run build",
    "test": "echo \"No tests yet\" && exit 0",
    "clean": "rm -rf .next",
    "postbuild": "echo \"Build completed successfully\"",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "bridge:baseline": "python3 tools/bridge/init_baseline.py",
    "bridge:export": "python3 tools/bridge/export_changeset.py",
    "chatlog:save": "bash scripts/save-chatlog.sh"
  },
  "engines": {
    "node": ">=18.17.0",
    "npm": ">=9.6.7"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@portabletext/react": "^4.0.3",
    "@sanity/client": "^6.24.1",
    "@sanity/image-url": "^1.1.0",
    "@sanity/presentation-comlink": "^1.0.33",
    "@sanity/vision": "^4.10.2",
    "autoprefixer": "^10.4.22",
    "dotenv": "^17.2.3",
    "next": "^15.5.7",
    "next-sanity": "^10.0.10",
    "openai": "^6.9.1",
    "postcss": "^8.5.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sanity": "^4.10.2",
    "styled-components": "^6.1.19",
    "tailwindcss": "^3.4.18",
    "twitter-api-v2": "^1.18.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@swc/helpers": "^0.5.17",
    "@types/node": "20.19.11",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.7",
    "typescript": "5.9.2"
  }
}
